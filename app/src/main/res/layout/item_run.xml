<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card"
    style="@style/Widget.Task1.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:translationZ="4dp"
    app:cardBackgroundColor="@color/transparent"
    app:shapeAppearance="@style/listItem1.Corner">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivRunImage"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/listItem1.Corner" />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            app:cardCornerRadius="12dp"
            android:translationZ="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="horizontal"
                android:padding="8dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDate"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:drawableTop="@drawable/ic_date"
                    android:drawableTint="@color/downy"
                    android:gravity="center"
                    android:text="@string/date"
                    android:textAllCaps="false"
                    android:textColor="@color/blueWhite"
                    android:textSize="12sp"
                    app:textAllCaps="false" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTime"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:drawableTop="@drawable/ic_timelapse"
                    android:drawableTint="@color/haiti"
                    android:text="Time"
                    android:gravity="center"
                    android:textSize="12sp"

                    android:textColor="@color/blueWhite"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDistance"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:drawableTop="@drawable/ic_distance"
                    android:drawableTint="#a1d651"
                    android:text="DISTANCE"
                    android:gravity="center"
                    android:textSize="12sp"

                    android:textColor="@color/blueWhite"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAvgSpeed"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:drawableTop="@drawable/speed_icon"
                    android:text="AVGSPEED"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:drawableTint="@color/blueBlack"
                    android:textColor="@color/blueWhite"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvCalories"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:drawableTop="@drawable/fat_fitness"
                    android:drawableTint="@color/orangeWhite"
                    android:text="CALORIES"
                    android:gravity="center"
                    android:textSize="12sp"

                    android:textColor="@color/blueWhite"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

